<%include ../partials/header.ejs%>

<div class='container'>
    <div class=row>
        <h1 class='signup'>Edit <%=campground.name%></h1>
        <div class='rwd-form'>
            <form action='/campgrounds/<%=campground._id%>/?_method=PUT' method="POST">
                <div class='form-group'>
                    <label for ='name'>Name</label>
                    <input type='text' class='form-control' name='name' value=<%=campground.name%>>
                </div>
                <div class='form-group'>
                    <label for ='image'>Image link</label>
                    <input type='text' class='form-control' name='image' value=<%=campground.image%>>
                </div>
                <div class='form-group'>
                    <label for ='description'>Description</label>
                    <input type='text' class='form-control' name='description' value=<%=campground.description%>>
                </div>
                 <div class='form-group'>
                    <button class= 'btn btn-md btn-primary btn-block'>Submit!</button>
                </div>
            </form>
        </div>
    </div>

</div>


<%include ../partials/footer.ejs%>